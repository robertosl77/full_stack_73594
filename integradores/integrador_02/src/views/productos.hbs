<div class="container mt-3">
    <div class="row">
        {{#each productos}}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                {{#if (gt descuento 0)}}
                    <div class="descuento position-absolute bg-danger text-white px-2 py-1">{{descuento}}% OFF</div>
                {{/if}}
                <img src="/{{imagen}}" class="card-img-top" alt="{{nombre}}">
                <div class="card-body">
                    <h5 class="card-title">{{nombre}}</h5>
                    <p class="card-text">{{bodega}} - {{tipo}}</p>
                    <p class="card-text fw-bold">
                        {{#if (gt descuento 0)}}
                            <span class="text-decoration-line-through">${{precio_original}}</span> 
                            ${{precioDescuento}}
                        {{else}}
                            ${{precio_original}}
                        {{/if}}
                    </p>
                    <p class="card-text">Disponibles: {{stock}}</p>
                    <div class="mb-2">
                        <label for="cantidad{{_id}}">Cantidad:</label>
                        <input type="number" id="cantidad{{_id}}" min="1" max="{{stock}}" value="1" 
                            {{#unless (gt stock 0)}}disabled{{/unless}}>
                    </div>
                    <button class="btn btn-primary agregar-carrito w-100"
                        {{#unless (gt stock 0)}}disabled style="background:gray;cursor:not-allowed;"{{/unless}}>
                        {{#unless (gt stock 0)}}Sin stock{{else}}AGREGAR{{/unless}}
                    </button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>